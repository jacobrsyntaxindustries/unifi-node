# UniFi Integration Test Configuration
# Copy this file to .env and fill in your UniFi Controller details

# Enable integration tests (set to 'true' to run integration tests)
RUN_INTEGRATION_TESTS=false

# UniFi Controller Connection Details
UNIFI_HOST=192.168.1.1
UNIFI_PORT=8443
UNIFI_USERNAME=admin
UNIFI_PASSWORD=your-password-here

# UniFi Site (usually 'default')
UNIFI_SITE=default

# SSL Configuration (set to 'true' for production with valid certificates)
UNIFI_STRICT_SSL=false

# Example configurations for different environments:

# Home Network Example:
# UNIFI_HOST=192.168.1.1
# UNIFI_USERNAME=admin
# UNIFI_PASSWORD=your-admin-password

# Cloud Key Example:
# UNIFI_HOST=unifi.yourdomain.com
# UNIFI_PORT=443
# UNIFI_STRICT_SSL=true

# Local Development Example:
# UNIFI_HOST=10.0.0.1
# UNIFI_PORT=8443
# UNIFI_STRICT_SSL=false
